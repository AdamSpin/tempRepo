<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/field_transaction_name"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:hint="@string/transaction_name" />

    <EditText
        android:id="@+id/field_transaction_amt"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/field_transaction_name"
        android:layout_marginTop="30sp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/colorPrimaryDark"
        android:hint="@string/transaction_amt"/>

    <Button
        android:id="@+id/confirm_transaction"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_transaction_amt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/confirm"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/field_transaction_cat"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_transaction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/budget_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360sp"
        android:text="Budget Category" />

</RelativeLayout>